@page
@model Ps_7.Pages.Edit_categoryModel
@{
    string IdOfProduct = HttpContext.Request.Query["id"];
}


<h2>Edytuj</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <div class="col-sm-6">
                <input asp-for="editCategory.id" hidden value="@IdOfProduct" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="editCategory.shortName" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="editCategory.shortName" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="editCategory.longName" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="editCategory.longName" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>