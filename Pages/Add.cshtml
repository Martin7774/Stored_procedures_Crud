@page
@model WebApplication1.AddModel
@{
    ViewData["Title"] = "Add";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
    @*<link rel="stylesheet" href="~/css/Style_Calculator.css" />*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    <h2>Nowy produkt</h2>
    <br />
    <br />
    <div class="container">
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label asp-for="newProduct.name" class="control-label col-sm2"></label>
                <div class="col-sm-6">
                    <input asp-for="newProduct.name" class="form-control">
                    <span asp-validation-for="newProduct.name" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="newProduct.price" class="control-label col-sm2"></label>
                <div class="col-sm-6">
                    <input asp-for="newProduct.price" class="form-control">
                    <span asp-validation-for="newProduct.price" class="text-warning"></span>
                </div>
            </div>
            <div>
                <select asp-for="newProduct.categoryId">
                    @foreach (var p in Model.categoryList)
                    {
                    <option value="@p.id">@Html.DisplayFor(m => p.shortName)</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn btn-primary">Zatwierdź</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>

