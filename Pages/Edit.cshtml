<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <div class="col-sm-6">
                <input asp-for="editProduct.id" hidden value="@IdOfProduct" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="editProduct.name" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="editProduct.name" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="editProduct.price" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="editProduct.price" class="form-control">
            </div>
        </div>
        <div>
            <select asp-for="editProduct.categoryId">
                @foreach (var p in Model.categoryList)
                {
                    <option value="@p.id">@Html.DisplayFor(m => p.shortName)</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
